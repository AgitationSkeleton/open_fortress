
"VertexLitGeneric"
{
	"$basetexture" "models/bots/dm_merc/dm_merc_robot_head"
	"$bumpmap" "models/bots/dm_merc/dm_merc_robot_head_normal"
	"$blendtintbybasealpha" "1" 
"$blendtintcoloroverbase" "0"  

"$colortint_base" "{255 255 255}" //**This is the default colour if there's no paint applied.** 

"$colortint_tmp" "[0 0 0]"

"Proxies"
{
	"ItemTintColor"
	{
		"resultVar" "$colortint_tmp"variable
	}
	"SelectFirstIfNonZero"
	{
		"srcVar1" "$colortint_tmp"
		"srcVar2" "$colortint_base"
		"resultVar" "$color2"
	}
}
	"$phong" "6"
	"$phongboost" "0.5"
	"$phongexponent" "10"	
	"$phongfresnelranges"	"[.5 .7 1]"
	"$halflambert" "0"
//	"$phongexponenttexture" "models/bots/classes/bot_heads/demo_bot_head_exp"
	
	">=DX90"
    {
		"$selfillum" 1
	}

	"$lightwarptexture" "models/lightwarps/robot_lightwarp"

	
	"$rimlight" "1"						
	"$rimlightexponent" "1"				
	"$rimlightboost" "2"
	"$rimmask" "1"

	"$detail" "effects/tiledfire/fireLayeredSlowTiled512.vtf"	
	"$detailscale" "5"
	"$detailblendfactor" .01
	"$detailblendmode" 6

	"$yellow" "0"
	"$one" "1"

	// Cloaking
	"$cloakPassEnabled" "1"

	"Proxies"
	{
		"spy_invis"
		{
		}
		"AnimatedTexture"
		{
			"animatedtexturevar" "$detail"
			"animatedtextureframenumvar" "$detailframe"
			"animatedtextureframerate" 30
		}
		"BurnLevel"
		{
			"resultVar" "$detailblendfactor"
		}
		"YellowLevel"
		{
			"resultVar" "$yellow"
		}
		"Equals"
		{
			"srcVar1"  "$yellow"
			"resultVar" "$color2"
		}

	}
}